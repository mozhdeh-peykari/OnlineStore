@model IEnumerable<Entities.Product>
@{
    ViewBag.Title = "محصولات";
    Layout = "_AdminLayout";
 }
<table class="table table-striped table-bordered">
    <tr>
        <td>شناسه</td>
        <td>نام</td>
        <td>توضیحات</td>
        <td>قیمت</td>
        <td>دسته بندی</td>
        <td></td>
    </tr>
    @foreach(var p in Model)
    {
        <tr>
            <td>@p.Id</td>
            <td>@p.Name</td>
            <td>@p.Description</td>
            <td>@p.Price</td>
            <td>@p.Category</td>
            <td>
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" asp-route-productId="@p.Id" class="btn btn-warning">ویرایش</a>
                    <input type="hidden" value="@p.Id" name="Id"/>
                    <button type="submit" class="btn btn-danger">حذف</button>
                </form>
            </td>
        </tr>

    }
</table>
<div class="text-center">
    <a class="btn btn-primary" asp-action="Create">افزودن محصول</a>
</div>